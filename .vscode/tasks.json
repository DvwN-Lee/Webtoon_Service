{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Webtoon Service",
      "type": "shell",
      "command": "${workspaceFolder}/gradlew",
      "args": [
        "run",
        "-p",
        "webtoon-rental-system"
      ],
      "windows": {
        "command": "${workspaceFolder}/gradlew.bat",
        "options": {
          "shell": {
            "executable": "cmd.exe",
            "args": ["/d", "/c", "chcp 65001 >nul &&"]
          }
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Build Webtoon Service",
      "type": "shell",
      "command": "${workspaceFolder}/gradlew",
      "args": [
        "build",
        "-p",
        "webtoon-rental-system"
      ],
      "windows": {
        "command": "${workspaceFolder}/gradlew.bat"
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Test Webtoon Service",
      "type": "shell",
      "command": "${workspaceFolder}/gradlew",
      "args": [
        "test",
        "-p",
        "webtoon-rental-system"
      ],
      "windows": {
        "command": "${workspaceFolder}/gradlew.bat"
      },
      "group": "test",
      "problemMatcher": []
    }
  ]
}
